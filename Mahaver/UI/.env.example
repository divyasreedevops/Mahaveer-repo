# Environment variables for Patient Admin App (Vite expects VITE_ prefix)
# Copy this file to `.env` or `.env.local` and fill values for your environment

# API - Base URL for backend API
# Recommended: Use /api for Vite proxy (avoids HTTPS/CORS issues)
VITE_API_BASE_URL=/api
# Alternative: Direct backend URL
# VITE_API_BASE_URL=https://localhost:7212

# Feature toggles / flags
# Set to true to use MSW mocks instead of real API
VITE_ENABLE_MOCKS=false

# Sentry (error monitoring) - optional
VITE_SENTRY_DSN=
VITE_SENTRY_ENV=production

# Analytics (Google Analytics / other)
VITE_GA_ID=

# Feature toggles / flags
VITE_ENABLE_MOCKS=true

# Auth / OAuth keys (keep secrets out of repo)
# e.g. JWT signing domain, OAuth client IDs
VITE_AUTH_CLIENT_ID=
VITE_AUTH_ISSUER=

# Build-time env
VITE_APP_NAME=PatientAdminApp
VITE_APP_VERSION=0.0.1
